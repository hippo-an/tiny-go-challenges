{{template "base" .}}

{{define "content"}}
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="mt-5">
                    Make reservation
                </h1>

                {{$res := index .Data "reservation"}}
                <form action="" method="post" class="needs-validationa" class="row g-3" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-group">
                        <label for="first_name" class="form-label">First name: </label>
                        {{with .Form.Errors.Get "first_name"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input required type="text" class="form-control {{with .Form.Errors.Get "first_name"}} is-invalid {{end}}" id="first_name" name="first_name"
                               autocomplete="off" value="{{$res.FirstName}}">
                    </div>
                    <div class="form-group">
                        <label for="last_name" class="form-label">Last name: </label>
                        {{with .Form.Errors.Get "last_name"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input required type="text" class="form-control {{with .Form.Errors.Get "last_name"}} is-invalid {{end}}" id="last_name" name="last_name"
                               autocomplete="off" value="{{$res.LastName}}">
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">Email: </label>
                        {{with .Form.Errors.Get "email"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input required type="email" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}" id="email" name="email" autocomplete="off" value="{{$res.Email}}">
                    </div>

                    <div class="form-group">
                        <label for="phone" class="form-label">Phone number: </label>
                        {{with .Form.Errors.Get "phone"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input required type="text" class="form-control {{with .Form.Errors.Get "phone"}} is-invalid {{end}}" id="phone" name="phone" autocomplete="off" value="{{$res.Phone}}">
                    </div>

                    <div class="form-group mt-5">
                        <input type="submit" class="btn btn-primary" value="Make Reservation"></input>
                    </div>
                </form>
            </div>
        </div>
    </div>

{{end}}
