package pages

import "{{.ModulePath}}/web/templates/layouts"

templ Index() {
	@layouts.Base("Home") {
		<div class="text-center">
			<h1 class="text-4xl font-bold text-gray-900 mb-4">
				Welcome to {{.Name}}
			</h1>
			<p class="text-lg text-gray-600 mb-8">
				Your Go web application is ready to go!
			</p>

			<!-- htmx example -->
			<div class="mb-8">
				<button
					class="btn btn-primary"
					hx-get="/api/ping"
					hx-target="#ping-result"
					hx-swap="innerHTML"
				>
					Click me (htmx)
				</button>
				<div id="ping-result" class="mt-4 text-gray-700"></div>
			</div>

			<!-- Alpine.js example -->
			<div x-data="{ count: 0 }" class="mb-8">
				<button
					class="btn btn-secondary"
					@click="count++"
				>
					Count: <span x-text="count"></span> (Alpine.js)
				</button>
			</div>

			<div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 text-left">
				<div class="p-6 bg-white rounded-lg shadow">
					<h3 class="text-lg font-semibold mb-2">Gin</h3>
					<p class="text-gray-600">High-performance HTTP framework for Go.</p>
				</div>
				<div class="p-6 bg-white rounded-lg shadow">
					<h3 class="text-lg font-semibold mb-2">templ</h3>
					<p class="text-gray-600">Type-safe HTML templating for Go.</p>
				</div>
				<div class="p-6 bg-white rounded-lg shadow">
					<h3 class="text-lg font-semibold mb-2">Tailwind CSS</h3>
					<p class="text-gray-600">Utility-first CSS framework.</p>
				</div>
			</div>
		</div>
	}
}
